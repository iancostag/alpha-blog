<h1>Listagem dos Artigos</h1>
<table>
    <thead>
        <tr>
            <th colspan="1">Titulo</th>
            <th>Descrição</th>
            <th colspan="3">Ações</th>
        </tr>
    </thead>
    <tbody>
        <% @artigos.each do |artigo|%>
            <tr>
                <td><%= artigo.titulo%></td>
                <td><%= artigo.descricao%></td>
                <td><%= button_to 'Detalhes', artigo_path(artigo), method: :get%></td>
                <td><%= button_to 'Editar', edit_artigo_path(artigo), method: :get%></td>
                <td><%= button_to 'Excluir', artigo_path(artigo), method: :delete, data: { confirm: "Tem certeza?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= button_to 'Criar novo Artigo', new_artigo_path, method: :get%>