<div class="container">
    <% if @artigo.errors.any? %>
        <h2>Os seguintes erros ocorreram</h2>
        <ul>
            <% @artigo.errors.full_messages.each do |msg|%>
                <li> <%= msg%> </li>
            <% end %>
        </ul>
    <% end %>
    <div class="row justify-content-center">
        <%= form_with(model: @artigo,class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>
            <div class="form-group row">
                <div class="col-2">
                <%= f.label :titulo ,class: "form-label col-form-label text-white"%>
                </div>
                <div class="col-10">
                    <%= f.text_field :titulo, class: "form-control shadow rounded", placeholder: "Título do Artigo"%>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <%= f.label :descricao, class: "form-label col-2 col-form-label text-white"%><br/>
                </div>
                <div class="col-10">
                    <%= f.text_area :descricao,rows:10, class:"form-control shadow rounded", placeholder: "Descrição do Artigo"%>
                </div> 
            </div>  
            <div class="form-group ">
                <%= f.submit class:"btn btn-outline-light btn-lg"%>
            </div>
        <% end %>
    </div>
    <%= link_to '[Cancelar Edição e voltar para a listagem]', artigos_path%>
</div>